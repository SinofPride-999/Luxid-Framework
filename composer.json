{
    "name": "luxid/framework",
    "description": "Starter project for Luxid Framework",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "starter", "luxid", "php"],
    "require": {
        "php": "^8.0",
        "luxid/engine": "^0.1.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "authors": [
        {
            "name": "Jhay",
            "email": "jhay@luxid.dev"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "ln -sf vendor/bin/juice juice 2>/dev/null || true",
            "chmod +x vendor/bin/juice 2>/dev/null || true",
            "echo 'Luxid Framework installed successfully!'",
            "echo ''",
            "echo 'üçã Juice CLI is ready to use! Run:'",
            "echo '  ./juice'",
            "echo '  or'",
            "echo '  php juice'"
        ]
    }
}
